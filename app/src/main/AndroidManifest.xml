<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.michelbarbosa.trabalhoconclusao">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="trabalho.android.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="trabalho.android.SplashScreenActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="trabalho.android.LoginActivity" />
        <activity android:name="trabalho.android.FormularioActivity" >

        </activity>
        <activity android:name="trabalho.android.FilmesActivity" />
        <activity android:name="trabalho.android.AboutActivity"/>
        <activity android:name="trabalho.android.CadastroUserActivity"/>
    </application>

</manifest>